#!/bin/python

def gather_info():
    message = raw_input("Please input a message ")
    count = int(raw_input("How many times to repeat? (default is 1) ") or 1)
    return (message, count)

def print_message(message, count):
    if count > 1:
        print((message + '\n') * count)
    else:
        print(message)

try:
    message, count = gather_info()
    print_message(message, count)
except ValueError:
    print ("Please specify some message")
